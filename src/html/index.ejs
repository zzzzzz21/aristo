<div class="page" id="data-page">
	<main class="main">
		<div class="main-visual">
			<div class="is-pc steam_wrap-outer">
				<div class="steam_wrap">
					<div class="steam st1"><object type="image/svg+xml" data="<%= path %>images/index/steam.svg" class="st_obj"></object></div>
					<div class="st2" style="display: none;"><object type="image/svg+xml" data="<%= path  %>images/index/steam.svg" class="st_obj"></object></div>
					<div class="st3" style="display: none;"><object type="image/svg+xml" data="<%= path  %>images/index/steam.svg" class="st_obj"></object></div>
					<div class="st4" style="display: none;"><object type="image/svg+xml" data="<%= path  %>images/index/steam.svg" class="st_obj"></object></div>
				</div>
				<div class="steam_wrap2" style="display: none;">
					<div class="steam st1"><img src="<%= path %>images/index/steam.png" class="st_obj"></div>
					<div class="st2" style="display: none;"><img src="<%= path %>images/index/steam.png" class="st_obj"></div>
					<div class="st3" style="display: none;"><img src="<%= path %>images/index/steam.png" class="st_obj"></div>
